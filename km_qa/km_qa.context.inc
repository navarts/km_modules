<?php

/**
 * @file
 * Bulk export of context objects generated by Bulk export module.
 */

/**
 * Implementation of hook_context_default_contexts()
 */
function km_qa_context_default_contexts() {
  $contexts = array();

  $context = new stdClass;
  $context->disabled = FALSE; /* Edit this to true to make a default context disabled initially */
  $context->api_version = 3;
  $context->name = 'Questions Section';
  $context->description = 'Settings for the Questions section of the site. ';
  $context->tag = 'Sections';
  $context->conditions = array(
    'path' => array(
      'values' => array(
        'questions*' => 'questions*',
      ),
    ),
  );
  $context->reactions = array(
    'breadcrumb' => 'questions',
    'menu' => 'questions',
  );
  $context->condition_mode = 0;

  // Translatables
  // Included for use with string extractors like potx.
  t('Sections');
  t('Settings for the Questions section of the site. ');
  $contexts['Questions Section'] = $context;

  return $contexts;
}
